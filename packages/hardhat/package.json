{
  "name": "metaloot-hardhat",
  "private": true,
  "version": "1.0.0",
  "main": "dist/typechain/index.js",
  "types": "typechain/index.ts",
  "scripts": {
    "chain": "npx hardhat node --network hardhat --no-deploy",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat deploy --export-all ../frontend/contracts/contractInfo.json",
    "postdeploy": "yarn build",
    "test": "npx hardhat test --network hardhat",
    "lint": "solhint 'contracts/**/*.sol'",
    "prettify": "prettier --write 'contracts/**/*.sol'",
    "build": "tsc"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.1",
    "@openzeppelin/test-helpers": "^0.5.13",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.11",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.2",
    "hardhat-deploy": "^0.9.1",
    "hardhat-etherscan-abi": "^0.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.2"
  }
}
